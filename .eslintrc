{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 2018
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["src/**/*.spec.ts"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "no-console": "error",
    "@typescript-eslint/explicit-function-return-type": "off"
  }
}
