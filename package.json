{
  "name": "webpack-electron-boilerplate",
  "version": "1.0.0",
  "description": "Getting started with Electron & Webpack - the easy way.",
  "main": "main.js",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "start": "run-p start:electron start:main start:renderer",
    "start:electron": "wait-on http://localhost:8080 && cp package.json node_modules/.build && electron node_modules/.build",
    "start:main": "webpack -w --config webpack/main.dev.config.ts",
    "start:renderer": "webpack-dev-server --config webpack/renderer.dev.config.ts --hot --color --compress --overlay",
    "build": "run-p build:main build:renderer && yarn build:electron",
    "build:electron": "cp package.json app && cd app && electron-builder --config ../electron-builder.json",
    "build:main": "webpack --config webpack/main.prod.config.ts",
    "build:renderer": "webpack --config webpack/renderer.prod.config.ts",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@piuccio/ejs-compiled-loader": "^3.0.0",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.2",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.3",
    "@types/webpack": "^4.4.17",
    "@types/webpack-merge": "^4.1.3",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "ejs": "^2.6.1",
    "electron": "^3.0.7",
    "electron-builder": "^20.31.2",
    "html-webpack-plugin": "^4.0.0-beta.2",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.3.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "wait-on": "^3.1.0",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
