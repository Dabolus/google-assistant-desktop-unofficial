{
  "name": "webpack-electron-boilerplate",
  "version": "1.0.0",
  "description": "Getting started with Electron & Webpack - the easy way.",
  "main": "main.js",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "start": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=1 run-p start:electron start:main start:renderer",
    "start:electron": "wait-on http://localhost:8080 && cp package.json node_modules/.build && electron node_modules/.build",
    "start:main": "webpack -w --config webpack/main.dev.config.ts",
    "start:renderer": "webpack-dev-server --config webpack/renderer.dev.config.ts --hot --color --compress --overlay",
    "build": "run-p build:main build:renderer && yarn build:electron",
    "build:electron": "cp package.json app && cd app && electron-builder --config ../electron-builder.json",
    "build:main": "webpack --config webpack/main.prod.config.ts",
    "build:renderer": "webpack --config webpack/renderer.prod.config.ts",
    "lint": "tslint -p .",
    "format": "tslint -p . --fix",
    "postinstall": "electron-builder install-app-deps",
    "test": "cross-env NODE_ENV=test jest -c jest/base.config.js",
    "test:main": "cross-env NODE_ENV=test jest -c jest/main.config.js",
    "test:renderer": "cross-env NODE_ENV=test jest -c jest/renderer.config.js"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.1.5",
    "@material/mwc-ripple": "^0.3.1",
    "@polymer/lit-element": "^0.6.3",
    "electron-store": "^2.0.0",
    "lit-html": "^0.13.0",
    "pwa-helpers": "^0.9.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-typescript": "^7.1.0",
    "@piuccio/ejs-compiled-loader": "^3.0.0",
    "@skatejs/ssr": "^0.19.9",
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/electron-store": "^1.3.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^23.3.9",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.12.5",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.3",
    "@types/webpack": "^4.4.18",
    "@types/webpack-merge": "^4.1.3",
    "autoprefixer": "^9.3.1",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "ejs": "^2.6.1",
    "electron": "^3.0.8",
    "electron-builder": "^20.34.0",
    "electron-devtools-installer": "^2.2.4",
    "html-webpack-plugin": "^4.0.0-beta.4",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.4.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.2",
    "terser-webpack-plugin": "^1.1.0",
    "to-lit-html-loader": "^0.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "wait-on": "^3.2.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "browserslist": [
    "chrome >= 66"
  ]
}
