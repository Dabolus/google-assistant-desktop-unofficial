{
  "compilerOptions": {
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2019",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "typings.d.ts",
    "src/**/*.ts"
  ]
}
