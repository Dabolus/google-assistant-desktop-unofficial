{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["renderer/components/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "typings.d.ts",
    "src/**/*.ts"
  ]
}
